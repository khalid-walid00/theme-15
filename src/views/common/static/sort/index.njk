<div x-data="xDataSort()" class="relative min-w-[132px] md:min-w-[140px]  dropdown">
  <div @click="toggleModal('sort')"
    class="dropdown-selected flex gap-5 justify-between items-center px-1 h-10 border-b border-neutral200 cursor-pointer bg-white">
    <span class=" font-bold" x-text="selectedLabel || 'فرز حسب'"></span>
    <i :class="{'rotate-180': modal.type === 'sort' && modal.open}"
      class="fi fi-tr-angle-small-down transition-all duration-300"></i>
  </div>

  <ul x-show="modal.type === 'sort' && modal.open" x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 transform -translate-y-2"
    x-transition:enter-end="opacity-100 transform translate-y-0" @click.away="toggleModal('sort', false)"
    @keydown.escape.window="toggleModal('sort', false)"
    class="dropdown-options w-full absolute top-full right-0 mt-1 border border-neutral200 bg-white shadow-md z-10 list-none p-0">
    <template x-for="option in options" >
      <li @click="selectOption(option)" class="px-3 py-2 cursor-pointer hover:bg-mainColor" x-text="option.label"></li>
    </template>
  </ul>
</div>

<script src={{"sort.js" | assets}}></script>
